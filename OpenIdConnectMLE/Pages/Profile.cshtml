@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h3>Hello, @User.Identity.Name</h3>
<p>Claims associated with current user:</p>
<table class="table table-sm">
    <thead>
    <tr>
        <th>Claim</th>
        <th>Value</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var claim in User.Claims)
    {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Account" asp-action="Logout">Sign out</a>